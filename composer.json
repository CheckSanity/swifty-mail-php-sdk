{
  "name": "checksanity/swifty-mail-sdk",
  "description": "Sanity.Swifty - Email service sender SDK",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Gary Bezruchko",
      "email": "gary@bezruchko.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Sanity\\Swifty\\Client\\": "src"
    }
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "php-http/discovery": true
    }
  },
  "require": {
    "php": "^8.2",
    "php-http/client-common": "^2.7.0",
    "php-http/discovery": "^1.19.1",
    "psr/http-client": "^1.0.2",
    "psr/http-client-implementation": "^1.0",
    "psr/http-factory": "^1.0.2",
    "symfony/http-client": "^6.3"
  },
  "require-dev": {
    "php-http/curl-client": "^2.3.0",
    "laminas/laminas-diactoros": "^2.17.0",
    "symfony/var-dumper": "^v5.4.25"
  }
}
